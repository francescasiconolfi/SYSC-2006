// SATURDAY SEPT 11, 2021

// Declaring constants:

# include <stdio.h>

#define START 0
#define COST 150
#define YEAR 1500

main()
{
  int weekly_expenses;
  
  for (weekly_expenses = START; weekly_expenses <= YEAR; weekly_expenses = weekly_expenses + COST)
    printf("I have now spent $%d out of my budget of $1500.\n", weekly_expenses);
  printf("I have now run out of money.\n");
  
}

// THURSDAY SEPT 16, 2021

// Using fxn strlen():

# include <string.h>

main()
{
  int len = strlen("hello world");
  
  printf("The number of characters in \"hello world\" is %d", len);
  
  return 0;
}

// Defining enumeration constants:

# include <stdio.h>

main()
{
  enum UPCOMING { BDAY = 6, XMAS = 25 };
  
  printf("My birthday will be in two months, on the %dth. Then it will be Christmas on December %dth.\n", BDAY, XMAS);
  
  return 0;
}

